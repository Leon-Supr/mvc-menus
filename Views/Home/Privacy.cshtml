@{
    //Layout = "_NuevoLayout";
    Layout = "";
    ViewData["Title"] = "Privacy";
}

<html>

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
</head>

<body>
    <!-- Contenedor VUE -->
    <div id="app">
        <h2>{{ mensaje }}</h2>
        <p>Hola {{ nombre }}</p>
        <movie-card title="Abuelitas calientes" image="https://picsum.photos/200/300"></movie-card>
        <movie-card title="Hello Kitty" image="https://picsum.photos/200"></movie-card>

        <div v-if="estado === 'cagando'"><h1>CAGANDO!!!!!</h1></div>
        <div v-else-if="estado === 'error'"><p>Hubo un error</p></div>
        <div v-else><p>Contenido cagado</p></div>

        <ul>
            <li v-for="pelicula in peliculas" :key="pelicula">{{pelicula}}</li>
        </ul>
    </div>
    <!-- Scripts VUE -->
    <script>
        Vue.component('movie-card', {
            props: ['image', 'title'],
            template:
                '<div>' +
                '<img width="100" v-bind:src="image" v-bind:alt="title"/>' +
                '<h2>{{ title }}</h2>' +
                '</div>'
        });
        Vue.component('mensajillo', {
            props: ['texto'],
            template: '<h1><p>{{ texto }}</p></h1>'
        });
        new Vue({
            el: '#app',
            data: {
                mensaje: 'Bienvenido!!!',
                nombre: 'cawn',
                estado: 'cagando',
                peliculas: ['Toy Story', 'Shrek', 'Furia de titanes']
            }
        })
    </script>
</body>

</html>