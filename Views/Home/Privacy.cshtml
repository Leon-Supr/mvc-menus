@{
    //Layout = "_NuevoLayout";
    Layout = "";
    ViewData["Title"] = "Privacy";
}

<html>

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
</head>

<body>
    <!-- Contenedor VUE -->
    <div id="app" class="d-flex flex-column justify-content-center align-items-center">
        <h1>{{ mensaje }}</h1>
        <h3>Hola {{ nombre }}</h3>
        <movie-card title="Hello Kitty" image="https://picsum.photos/200/300"></movie-card>
        <movie-card title="Bye Kitty" image="https://picsum.photos/200"></movie-card>

        <div v-if="estado === 'cagando'">
            <h1>CARGANDO!!!!!</h1>
        </div>
        <div v-else-if="estado === 'error'">
            <p>Hubo un error</p>
        </div>
        <div v-else>
            <p>Contenido cargado</p>
        </div>

        <ul>
            <h2>Películas famosas</h2>
            <li v-for="pelicula in peliculas" :key="pelicula" class="d-flex flex-column justify-content-center align-items-center">
                <h4>{{pelicula}}</h4>
            </li>
        </ul>

        <h2>Frases de Chuck Norris</h2>
        <div id="app" class="d-flex flex-wrap justify-content-center w-75">
            <chuck-icon v-for="(item, index) in chuck" :key="index" :icon="item.icon_url" :texto="item.value">
            </chuck-icon>
        </div>

    </div>
    <!-- Scripts VUE -->
    <script>
        Vue.component('movie-card', {
            props: ['image', 'title'],
            template:
                '<div>' +
                '<img width="100" v-bind:src="image" v-bind:alt="title"/>' +
                '<h2>{{ title }}</h2>' +
                '</div>'
        });
        Vue.component('mensajillo', {
            props: ['texto'],
            template: '<h1><p>{{ texto }}</p></h1>'
        });
        Vue.component('chuck-icon', {
            props: ['icon', 'texto'],
            template: `
                <div class="card mb-3" style="max-width: 540px;">
                <div class="row no-gutters">
                    <div class="col-md-4 d-flex align-items-center justify-content-center p-2">
                    <img :src="icon" class="img-fluid rounded-start" alt="Chuck Icon">
                    </div>
                    <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">{{ texto }}</p>
                    </div>
                    </div>
                </div>
                </div>
            `
        });

        new Vue({
            el: '#app',
            data: {
                mensaje: 'Bienvenido!!!',
                nombre: 'Hasbulla',
                estado: "ninguno",
                peliculas: ['Tron', 'Mi pobre angelito', 'Terror bajo tierra'],
                bpeliculas: [
                    { titulo: 'Una imagen', imagen: 'https://picsum.photos/200' },
                    { titulo: 'Una imagen segunda parte', imagen: 'https://picsum.photos/200' },
                    { titulo: 'Una imagen recargado', imagen: 'https://picsum.photos/200' }
                ],
                chuck: [
                    {
                        "icon_url": "https://picsum.photos/200/220",
                        "value": "Chuck Norris can skydive into outer space."
                    },
                    {
                        "icon_url": "https://picsum.photos/200/210",
                        "value": "The chief export of Chuck Norris is pain."
                    },
                    {
                        "icon_url": "https://picsum.photos/200/250",
                        "value": "Chuck Norris doesn't read books. He stares them down until he gets the information he wants."
                    },
                    {
                        "icon_url": "https://picsum.photos/200/230",
                        "value": "Time waits for no man. Unless that man is Chuck Norris."
                    },
                    {
                        "icon_url": "https://picsum.photos/200/240",
                        "value": "If you spell Chuck Norris in Scrabble, you win. Forever."
                    },
                ]
            }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>